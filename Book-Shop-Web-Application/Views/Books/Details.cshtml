@model Book_Shop_Web_Application.Models.Book

@{
    ViewData["Title"] = "Szczegóły książki";
}
<div class="row">
        <div class="col-md-8 offset-2">
            <div class="card mb-12">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @Model.Title
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="@Model.ImageURL" width="100%" alt="@Model.Title">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">@Model.Description</p>
                            <p class="card-text"><b>Autor: </b>
                                <a asp-controller="Authors" asp-action="Details" asp-route-id="@Model.AuthorId">@Model.Author.FullName</a>
                            </p>
                            <p class="card-text"><b>Wydawnictwo: </b>
                                <a asp-controller="Publishers" asp-action="Details" asp-route-id="@Model.PublisherId">@Model.Publisher.Name</a>
                            </p>
                            <p class="card-text"><b>Rok publikacji: </b>@Model.YearOfPublication</p>
                            <p class="card-text"><b>Cena: </b>@Model.Price.ToString("c")</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Index">Wróć do listy</a>
                                <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Dodaj do koszyka</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>