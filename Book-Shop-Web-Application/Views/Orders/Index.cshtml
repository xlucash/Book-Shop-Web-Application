@model List<Order>

@{
    ViewData["Title"] = "Wszystkie zamówienia";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Lista twoich wszystkich zamówień</h4>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>ID zamówienia</th>
                    <th>Produkty</th>
                    <th>Cena</th>
                    <th>Użytkownik</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="align-middle">@order.Id</td>
                        <td class="align-middle">
                            <ul style="list-style-type:none">
                                @foreach (var item in order.OrderItems)
                                {
                                    <li>
                                        <div class="alert alert-info" role="alert">
                                            <span class="badge bg-success">@item.Amount</span> [@item.Price.ToString("c")] - @item.Book.Title
                                        </div>
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="align-middle">@order.OrderItems.Select(b => b.Book.Price * b.Amount).Sum().ToString("c")</td>
                        <td class="align-middle"> - </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>