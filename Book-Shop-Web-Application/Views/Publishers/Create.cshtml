@model Book_Shop_Web_Application.Models.Publisher

@{
    ViewData["Title"] = "Dodaj nowe wydawnictwo";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Dodaj nowe wydawnictwo</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-controller="Publishers" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="LogoPicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LogoPictureURL" class="control-label"></label>
                        <input asp-for="LogoPictureURL" class="form-control" />
                        <span asp-validation-for="LogoPictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Pokaż wszystkie</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
        <script>
            $(document).ready(function () {
            var output = document.getElementById('LogoPicturePreview');
            output.src = $("#LogoPictureURL").val();
            })
            $("#LogoPictureURL").on("change", function () {
                var output = document.getElementById('LogoPicturePreview');
                output.src = $(this).val();
            })
        </script>
}