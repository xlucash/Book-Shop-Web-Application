@model Book_Shop_Web_Application.Models.Publisher

@{
    ViewData["Title"] = "Szczegóły wydawnictwa";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Informacje o Wydawnictwie</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />
                    <div class="form-group text-left">
                        <h4>Wydawnictwo</h4>
                        <p>@Model.Name</p>
                        <h4>Opis</h4>
                        <p>@Model.Description</p>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LogoPictureURL" class="control-label" hidden></label>
                    <input asp-for="LogoPictureURL" class="form-control" hidden />
                    <span asp-validation-for="LogoPictureURL" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Pokaż wszystkie</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#LogoPictureURL").val();
        })
    </script>
}