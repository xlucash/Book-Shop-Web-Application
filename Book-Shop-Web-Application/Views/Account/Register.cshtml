@using Book_Shop_Web_Application.Models.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Stwórz nowe konto";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Stwórz nowe konto</h4>
        </p>
        @if(TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span>@TempData["Error"]</span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label><i class="bi bi-person"></i> Imię i nazwisko</label>
                        <input asp-for="FullName" class="form-control"/>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label><i class="bi bi-envelope"></i> Adres email</label>
                        <input asp-for="EmailAddress" class="form-control"/>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label><i class="bi bi-key"></i> Hasło</label>
                        <input asp-for="Password" class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label><i class="bi bi-key"></i> Powtórz Hasło</label>
                        <input asp-for="ConfirmPassword" class="form-control"/>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Zarejestruj się"/>
                        <a class="btn btn-outline-secondary" asp-controller="Books" asp-action="Index">Anuluj</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>